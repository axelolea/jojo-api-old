{
  "openapi": "3.0.3",
  "info": {
    "title": "JoJo's API",
    "description": "Esto es una descripcion",
    "contact": {
      "email": "axelolea@example.com"
    },
    "license": {
      "name": "Flask",
      "url": "https://flask.palletsprojects.com/en/2.2.x/license/"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5000/api/v1"
    }
  ],
  "tags": [
    {
      "name": "characters",
      "description": "Todo sobre los personajes de la serie."
    },
    {
      "name": "stands",
      "description": "Todo sobre los stands de la serie"
    },
    {
      "name": "images",
      "description": "Acceso a imagenes y demas funciones"
    },
    {
      "name": "countries",
      "description": "Listado de paises"
    },
    {
      "name": "parts",
      "description": "Todo sobre las partes de las serie"
    }
  ],
  "paths": {
    "/characters": {
      "get": {
        "summary": "Obtener lista de personajes",
        "tags": [
          "characters"
        ],
        "description": "Listado de personajes enpaginados",
        "operationId": "getCharacters",
        "parameters": [
          {
            "$ref": "#/components/parameters/pagination_page"
          },
          {
            "$ref": "#/components/parameters/pagination_per_page"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/charactersPagination"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          }
        }
      },
      "post": {
        "summary": "Crear un nuevo personaje",
        "tags": [
          "characters"
        ],
        "description": "Crear un nuevo personaje en la base de datos",
        "requestBody": {
          "required": true,
          "description": "Crear new character, favor de crear el body con el formato especificado",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CharacterBody"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/charactersPagination"
                }
              }
            }
          }
        }
      }
    },
    "/characters/{id}": {
      "get": {
        "summary": "Returns a character by ID.",
        "tags": [
          "characters"
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/id"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/charactersPagination"
                }
              }
            }
          }
        }
      }
    },
    "/characters/query": {
      "get": {
        "summary": "Returns a characters with params is filter.",
        "tags": [
          "characters"
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/nameQuery"
          },
          {
            "$ref": "#/components/parameters/partsQuery"
          },
          {
            "$ref": "#/components/parameters/countryQuery"
          },
          {
            "$ref": "#/components/parameters/is_hamon_user"
          },
          {
            "$ref": "#/components/parameters/is_stand_user"
          },
          {
            "$ref": "#/components/parameters/is_gyro_user"
          },
          {
            "$ref": "#/components/parameters/living"
          },
          {
            "$ref": "#/components/parameters/is_human"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/charactersPagination"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "responses": {
      "NotFound": {
        "description": "(Not Found) no se encontro los elementos"
      },
      "BadRequest": {
        "description": "(Not Found) no se los datos correctamente"
      }
    },
    "parameters": {
      "pagination_page": {
        "name": "page",
        "in": "query",
        "description": "Numero de pagina",
        "schema": {
          "type": "integer",
          "default": 1
        }
      },
      "pagination_per_page": {
        "name": "per_page",
        "in": "query",
        "description": "numero de datos por pagina",
        "schema": {
          "type": "integer",
          "minimum": 5,
          "maximum": 50,
          "default": 10
        }
      },
      "id": {
        "name": "id",
        "in": "path",
        "required": true,
        "schema": {
          "type": "integer",
          "minimum": 1
        }
      },
      "nameQuery": {
        "name": "name",
        "in": "query",
        "schema": {
          "type": "string"
        }
      },
      "partsQuery": {
        "name": "parts",
        "in": "query",
        "explode": false,
        "schema": {
          "type": "array",
          "items": {
            "type": "integer"
          }
        }
      },
      "countryQuery": {
        "name": "country",
        "in": "query",
        "schema": {
          "type": "string"
        }
      },
      "is_hamon_user": {
        "name": "is_hamon_user",
        "in": "query",
        "schema": {
          "type": "boolean"
        }
      },
      "is_stand_user": {
        "name": "is_stand_user",
        "in": "query",
        "schema": {
          "type": "boolean"
        }
      },
      "is_gyro_user": {
        "name": "is_gyro_user",
        "in": "query",
        "schema": {
          "type": "boolean"
        }
      },
      "living": {
        "name": "living",
        "in": "query",
        "schema": {
          "type": "boolean"
        }
      },
      "is_human": {
        "name": "is_human",
        "in": "query",
        "schema": {
          "type": "boolean"
        }
      }
    },
    "schemas": {
      "PagionationSchema": {
        "type": "object",
        "description": "Detallas de la paginacion",
        "properties": {
          "page": {
            "type": "integer"
          },
          "pages": {
            "type": "integer"
          },
          "total_count": {
            "type": "integer"
          },
          "prev": {
            "type": "boolean"
          },
          "next": {
            "type": "boolean"
          },
          "has_prev": {
            "type": "boolean"
          },
          "has_next": {
            "type": "boolean"
          }
        }
      },
      "ImagesSchema": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "full_body": {
            "type": "string"
          },
          "half_body": {
            "type": "string"
          }
        }
      },
      "CharacterBasic": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "japanese_name": {
            "type": "string"
          },
          "images": {
            "$ref": "#/components/schemas/ImagesSchema"
          }
        }
      },
      "CharacterBody": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "maximum": 100
          },
          "japanese_name": {
            "type": "string",
            "maximum": 100
          },
          "parts": {
            "type": "array",
            "items": {
              "type": "integer",
              "minimum": 1,
              "maximum": 8
            },
            "minItems": 1,
            "maxItems": 8
          }
        },
        "required": [
          "name",
          "japanese_name",
          "parts"
        ]
      },
      "charactersPagination": {
        "type": "object",
        "properties": {
          "data": {
            "description": "Personajes en listados",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CharacterBasic"
            }
          },
          "pagination": {
            "$ref": "#/components/schemas/PagionationSchema"
          }
        }
      }
    }
  }
}